<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1caca">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Quản Lý Sinh Viên"
        android:textColor="#fff"
        android:background="#913845"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnThemLop"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9a9f9a"
        android:text="Thêm Lớp"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnXem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9a9f9a"
        android:text="Xem danh sách Lớp"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnQuanLy"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#9a9f9a"
        android:text="Quản Lý Sinh Viên"
        android:textColor="#FFF"
        android:layout_marginTop="20dp"/>
</LinearLayout>